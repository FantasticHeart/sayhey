<!--index.wxml-->
<view class="container" style="background:url('../../images/indexbak.jpg')">
  <view class="userinfo">
    <block wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">
      <image bindtap="bindViewTap" class="userinfo-avatar" src="../../images/start.jpg" mode="cover"></image>
    </block>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
