<view class="wrap page01">
	<view class="g-tabHeader">
		<view class="item {{tabContent[0]?'on':''}}" bindtap="btnTabSwitch" data-id="0">发现</view>
		<view class="item {{tabContent[1]?'on':''}}" bindtap="btnTabSwitch" data-id="1">关注</view>
		<view class="item {{tabContent[2]?'on':''}}" bindtap="btnTabSwitch" data-id="2">话题</view>
	</view>
	<block wx:if="{{tabContent[0]}}">
		<view class="list" wx:for="{{userData}}" wx:key="item">
   			<view class="g-cardItem">
				<view class="userInfo">
					<image src="{{item.avatar}}" class="face" mode="widthFix" bindtap='clickOwn' data-id="{{item.dataId}}"></image>
					<view class="r">
						<view class="txt1">{{item.name}} <text class="tag">{{item.title}}</text></view>
						<view class="txt2">{{item.time}}</view>
					</view>
				</view>
				<view class="article" bindtap='clickDetail' data-id='{{item.dataId}}'>
					<view>{{item.content}}</view>
				</view>
				<view class="audio-box">
					<image src="{{gIp+item.imgPath}}" class="img" mode="widthFix"></image>
					<view class="play-operate">
						<button class="btn-play" bindtap="{{onePlay[item.dataId]?'':'btnOnePlay'}}" hover-class="none" data-id="{{item.dataId}}">
							<block wx:if="{{onePlay[item.dataId]}}">
								<image src="/images/icon-pause.png" class="icon" mode="widthFix"></image>
							</block>
							<block wx:else>
								<image src="/images/icon-play.png" class="icon" mode="widthFix"></image>
							</block>
						</button>
						<view class="time">{{item.audioTime}}'</view>
					</view>
				</view>
				<view class="btm-operate">
					<button class="item" bindtap="" hover-class="none"><image src="/images/discuss.png" class="icon" mode="widthFix" bindtap="clickDetail" data-id='{{item.dataId}}'></image>{{item.comment}}</button>
					<button class="item" bindtap="" hover-class="none"><image src="{{isred[item.dataId]?'/images/redhart.png':'/images/hart.png'}}" class="icon" bindtap="clickred" mode="widthFix" data-id='{{item.dataId}}'></image>{{item.upvoteNum}}</button>
				</view>
			</view>
		</view>
	</block>
	<block wx:if="{{tabContent[1]}}">
		<view class="list" wx:for="{{focusData}}" wx:key="item">
   			<view class="g-cardItem">
				<view class="userInfo">
					<image src="{{item.avatar}}" class="face" mode="widthFix"></image>
					<view class="r">
						<view class="txt1">{{item.name}} <text class="tag">{{item.title}}</text></view>
						<view class="txt2">{{item.time}}</view>
					</view>
				</view>
				<view class="article" bindtap='clickDetail' data-id='{{item.dataId}}'>
					<view>{{item.content}}</view>
				</view>
				<view class="audio-box">
					<image src="{{gIp+item.imgPath}}" class="img" mode="widthFix"></image>
					<view class="play-operate">
						<button class="btn-play" bindtap="{{onePlay[item.dataId]?'':'btnOnePlay'}}" hover-class="none" data-id="{{item.dataId}}" >
							<block wx:if="{{onePlay[item.dataId]}}">
								<image src="/images/icon-pause.png" class="icon" mode="widthFix"></image>
							</block>
							<block wx:else>
								<image src="/images/icon-play.png" class="icon" mode="widthFix"></image>
							</block>
						</button>
						<view class="time">{{item.audioTime}}'</view>
					</view>
				</view>
				<view class="btm-operate">
					<button class="item" bindtap="" hover-class="none"><image src="/images/discuss.png" class="icon" mode="widthFix" bindtap="clickDetail" data-id='{{item.dataId}}'></image>{{item.comment}}</button>
					<button class="item" bindtap="" hover-class="none"><image src="{{isred[item.dataId]?'/images/redhart.png':'/images/hart.png'}}" class="icon" bindtap="clickred" mode="widthFix" data-id='{{item.dataId}}'></image>{{item.upvoteNum}}</button>
				</view>
			</view>
		</view>
	</block>
	<block wx:if="{{tabContent[2]}}">
		<view class="list3">
			<view class="tips">3 Diverse topics everyday</view>
      <view wx:for="{{topicData}}" wx:key="item">
      <view class="item" bindtap='clickPut' data-id="{{item.id}}">
				<view class="txt1">{{item.id+1}}.<text class="tag">{{item.title}}</text></view>
				<view class="txt2">
					<view>{{item.content}}</view>
				</view>
				<view class="person">23人已参与</view>
			</view>
      </view>
			
			
		</view>
	</block>

</view>

