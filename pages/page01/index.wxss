.toast-box {    
  width: 100%;    
  height: 100%;    
  opacity: 1;    
  position: fixed;    
  top: 0px;    
  left: 0px;
  } 
.toastbg {   
   opacity: 0.2;    
   background-color: black;    
   position: absolute;    
   width: 100%;    
   height: 100100%;
   } 
.showToast {   
  position: absolute;    
  opacity: 1;    
  width: 70%;    
  margin-left: 15%;    
  margin-top: 40%;
  } 
.toast-title { 
  display: flex;
  align-items: center;
  justify-content: center; 
  background-color: #fff;       
  padding-top: 2vh;       
  padding-bottom: 2vh;
  border-color: white;
  } 
  .toast-main { 
    border-color: white;   
    padding-top: 2vh;   
    padding-bottom: 2vh;    
    background-color: white;    
    text-align: center;
    } 
.toast-input {
  border-color: white;   
  margin-left: 3%;    
  margin-right: 3%;       
  padding-left: 2vh;    
  padding-right: 2vh;   
  padding-top: 1vh;    
  padding-bottom: 1vh  ;
   } 
.toast-button {    
  display: flex;
  } 
.button1 {   
  border-color: white;
  width: 50%;
  } 
.button2 {  
  border-color: white;  
  width: 50%;
  } 
.button1 button {  
  border-radius: 0;  
  width: 100%;    
  background-color: white;    
  color: black;    
  }
.button2 button{   
  border-radius: 0; 
  width: 100%;    
  background-color: white;    
  color: blue;    
  } 
  .picker {    
    padding-top: 1vh;    
    padding-bottom: 1vh;
    }